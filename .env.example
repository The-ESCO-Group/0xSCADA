# 0xSCADA Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/oxscada

# =============================================================================
# BLOCKCHAIN
# =============================================================================
# Local Hardhat node (development)
HARDHAT_RPC_URL=http://127.0.0.1:8545

# Production blockchain (uncomment and configure for production)
# ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
# PRIVATE_KEY=your_private_key_here

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=development
PORT=5000

# =============================================================================
# DOCKER (for docker-compose)
# =============================================================================
DB_USER=oxscada
DB_PASSWORD=oxscada_secret
DB_NAME=oxscada
